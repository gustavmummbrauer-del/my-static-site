---
const menu = [
  { label: "Products", href: "/products" },
  { label: "Industries", href: "/industries" },
  { label: "Resources", href: "/resources" },
  { label: "Pricing", href: "/pricing" },
];
---

<header class="wp-header" role="banner">
  <!-- Top utility bar -->
  <div class="wp-topbar">
    <div class="wp-container wp-topbar__inner">
      <div class="wp-topbar__left">
        <a class="wp-topbar__link" href="tel:+14807021600">Call</a>
        <a class="wp-topbar__link" href="mailto:support@wisepelican.com">Email</a>
        <button class="wp-topbar__link" type="button">Chat</button>
      </div>

      <div class="wp-topbar__right">
        <a class="wp-topbar__link" href="/login">User Login</a>
        <a class="wp-topbar__link" href="/knowledge-base">Knowledge Base</a>
      </div>
    </div>
  </div>

  <!-- Main nav -->
  <div class="wp-nav">
    <div class="wp-container wp-nav__inner">
      <a class="wp-logo" href="/" aria-label="Wise Pelican Home">
        <img src="/wplogo.svg" alt="Wise Pelican" height="34" />
      </a>

      <nav class="wp-menu" aria-label="Primary">
        <ul class="wp-menu__list">
          {menu.map((item) => (
            <li class="wp-menu__item">
              <a class="wp-menu__link" href={item.href}>
                {item.label} <span class="wp-caret" aria-hidden="true">â–¾</span>
              </a>
            </li>
          ))}
        </ul>
      </nav>

      <div class="wp-actions">
        <a class="wp-ghost" href="/login">User Login</a>
        <a class="wp-cta" href="/sign-up">Create A Free Account</a>
      </div>
    </div>
  </div>
</header>
